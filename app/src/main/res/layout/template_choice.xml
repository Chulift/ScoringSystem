<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/menuLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Template "
            android:textColor="@color/black"
            android:gravity="fill_horizontal|center_vertical"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_template"
            android:text="ชื่อเทมเพลท:"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/column_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="จำนวนคอลั่ม :"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/section_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="จำนวนข้อ :"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/choice_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="จำนวนตัวเลือกในข้อ :"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/choose_button"
            android:text="เลือก"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
</LinearLayout>